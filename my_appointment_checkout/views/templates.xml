<odoo>
  <template id="hide_checkout_fields" inherit_id="website_sale.checkout">
    <!-- Remove address block -->
    <xpath expr="//div[contains(@class,'address_form')]" position="replace">
      <div t-if="0"/>
    </xpath>
    <!-- Remove 'Add a New Address' link -->
    <xpath expr="//a[@data-target='#add_new_address']" position="replace">
      <t t-if="0"/>
    </xpath>
  </template>
</odoo>