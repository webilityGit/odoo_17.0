<odoo>
  <data>

    <!-- Override rendering QWeb templejta: nosi isti ID ali je u namespace tvog modula -->
    <template id="appointment_form" inherit_id="appointment.appointment_form">
      <!-- Inline CSS pre forme da sakrije JS dropdown -->
      <xpath expr="//form[@class='appointment_submit_form']" position="before">
        <style>
          /* Sakrij widget za izbor vremenske zone */
          .o_appointment_timezone_selection {
            display: none !important;
          }
        </style>
      </xpath>
    </template>

  </data>
</odoo>
