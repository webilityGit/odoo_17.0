  <!-- Stavka menija pod Website ▶ Configuration -->
  <menuitem
      id="menu_website_track_root"
      name="Track Events"
      parent="website.menu_website_global_configuration"
      sequence="99"
      action="action_website_track_event"/>
</odoo>